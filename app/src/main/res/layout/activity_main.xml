<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#342a73"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/input_group"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="SIGN UP"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/input_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_top"
                    android:hint="Player Name"
                    android:inputType="textPersonName|textCapSentences"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_top"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="15dp" />

                <TextView
                    android:id="@+id/tv_Dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:hint="Date of Birth"
                    android:padding="15dp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:padding="15dp"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:weightSum="2">-->

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_middle"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="15dp" />

                <!-- <Button
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:onClick="validateEmailId"
                     android:text="validate" />
             </LinearLayout>-->

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_edu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <RadioButton
                        android:id="@+id/rb_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School" />

                    <RadioButton
                        android:id="@+id/rb_college"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College" />
                </RadioGroup>

                <!--<RadioGroup
                    android:id="@+id/rg_playertype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <RadioButton
                        android:id="@+id/rb_player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Player" />

                    <RadioButton
                        android:id="@+id/rb_coach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coach" />

                    <RadioButton
                        android:id="@+id/rb_mentor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mentor" />

                </RadioGroup>-->

                <Spinner
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:padding="15dp" />

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:padding="15dp" />

                <Spinner
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:padding="15dp" />

                <Spinner
                    android:id="@+id/academy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:padding="15dp" />

                <!--<androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:hint="state"
                    android:padding="15dp" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:hint="city"
                    android:padding="15dp" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:hint="location"
                    android:padding="15dp" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/academy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:hint=" Academy Name"
                    android:padding="15dp" />-->


                <EditText
                    android:id="@+id/et_stateRank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_middle"
                    android:hint="State Ranking"
                    android:inputType="number|text"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/tv_nationalrank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bottom"
                    android:hint="National Ranking"
                    android:inputType="number|text"
                    android:padding="15dp" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/ic_launcher" />


                <TextView
                    android:id="@+id/image_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:text="Hello World!"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nationalrank"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="OnTakePhotoClicked"
                    android:text="Click"
                    android:textAllCaps="false"
                    android:textColor="#FE5295"
                    android:textSize="17sp" />


                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="ADD"
                    android:textAllCaps="false"
                    android:textColor="#FE5295"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/Login_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:text="Already Have an Account?  Sign in"
                    android:textAllCaps="true"
                    android:textColor="#FAD0E1"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>