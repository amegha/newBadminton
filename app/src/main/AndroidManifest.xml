<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapp_badminton">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/caisa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/caisa"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Coach"></activity>
        <activity
            android:name=".Mentor"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".HomePage" />
        <activity
            android:name=".PlayerPerformance"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".GraphDisplay"
            android:screenOrientation="fullSensor" />
        <activity android:name=".Reset_pass" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SearchActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Score_From" />
        <activity
            android:name=".SelectedUserActivity"
            android:parentActivityName=".Score_From" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.myapp_badminton"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".Login"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".megha.ViewAnswers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".megha.SubmitAnswer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".megha.ListOfAnswers"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".megha.PlayVideo"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="landscape"
            android:supportsRtl="true"/>
        <activity android:name=".DisplayPlayer" />
    </application>

</manifest>